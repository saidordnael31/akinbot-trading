// app/investor-dashboard/page.tsx
const getPackageInfo = (value) => {
  if (value >= 100000) {
    return { name: t("packages.institutional.name"), bonus: 35, cliff: 6, vesting: 36 }
  } else if (value >= 20000) {
    return { name: t("packages.agroWhale.name"), bonus: 30, cliff: 6, vesting: 36 }
  } else if (value >= 5000) {
    return { name: t("packages.agroElite.name"), bonus: 25, cliff: 6, vesting: 24 }
  } else if (value >= 1000) {
    return { name: t("packages.agroMaster.name"), bonus: 15, cliff: 3, vesting: 24 }
  } else if (value >= 250) {
    return { name: t("packages.agroDeriPlus.name"), bonus: 10, cliff: 0, vesting: 18 }
  } else {
    return { name: t("packages.raizDoAgro.name"), bonus: 5, cliff: 0, vesting: 12 }
  }
}
